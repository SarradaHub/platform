  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/node": "^22.7.4",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.16",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "pino-pretty": "^11.2.2",
    "supertest": "^7.0.0",
    "tsup": "^7.3.0",
    "tsx": "^4.16.0",
