{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://platform.example.com/schemas/finance/payment.received.v1.json",
  "title": "payment.received.v1",
  "type": "object",
  "required": ["eventId", "schemaVersion", "occurredAt", "source", "payload"],
  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid"
    },
    "schemaVersion": {
      "type": "string",
      "const": "v1"
    },
    "occurredAt": {
      "type": "string",
      "format": "date-time"
    },
    "traceId": {
      "type": "string",
      "format": "uuid"
    },
    "causationId": {
      "type": "string",
      "format": "uuid"
    },
    "source": {
      "type": "string",
      "enum": [
        "pickup-game-manager",
        "sarradabet"
      ]
    },
    "context": {
      "type": "object",
      "required": ["tenantId", "environment"],
      "properties": {
        "tenantId": {
          "type": "string",
          "minLength": 1
        },
        "environment": {
          "type": "string",
          "enum": ["dev", "staging", "prod"]
        }
      },
      "additionalProperties": false
    },
    "payload": {
      "type": "object",
      "required": [
        "transactionId",
        "userId",
        "amount",
        "currency",
        "status",
        "receivedAt"
      ],
      "properties": {
        "transactionId": {
          "type": "string",
          "minLength": 1
        },
        "sourceSystem": {
          "type": "string",
          "enum": ["pickup-game-manager", "sarradabet"]
        },
        "userId": {
          "type": "string",
          "format": "uuid"
        },
        "matchId": {
          "type": "string",
          "format": "uuid"
        },
        "amount": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "completed", "failed", "refunded"]
        },
        "method": {
          "type": "string",
          "enum": ["cash", "card", "pix", "transfer", "credit"]
        },
        "receivedAt": {
          "type": "string",
          "format": "date-time"
        },
        "metadata": {
          "type": "object",
          "additionalProperties": {
            "type": ["string", "number", "boolean"]
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
