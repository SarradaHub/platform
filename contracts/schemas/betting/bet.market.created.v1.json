{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://platform.example.com/schemas/betting/bet.market.created.v1.json",
  "title": "bet.market.created.v1",
  "type": "object",
  "required": ["eventId", "schemaVersion", "occurredAt", "source", "payload"],
  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid"
    },
    "schemaVersion": {
      "type": "string",
      "const": "v1"
    },
    "occurredAt": {
      "type": "string",
      "format": "date-time"
    },
    "traceId": {
      "type": "string",
      "format": "uuid"
    },
    "causationId": {
      "type": "string",
      "format": "uuid"
    },
    "source": {
      "type": "string",
      "enum": [
        "sarradabet"
      ]
    },
    "context": {
      "type": "object",
      "required": ["tenantId", "environment"],
      "properties": {
        "tenantId": {
          "type": "string",
          "minLength": 1
        },
        "environment": {
          "type": "string",
          "enum": ["dev", "staging", "prod"]
        }
      },
      "additionalProperties": false
    },
    "payload": {
      "type": "object",
      "required": [
        "betId",
        "matchId",
        "status",
        "marketType",
        "odds",
        "createdAt"
      ],
      "properties": {
        "betId": {
          "type": "string",
          "minLength": 1
        },
        "matchId": {
          "type": "string",
          "format": "uuid"
        },
        "status": {
          "type": "string",
          "enum": ["open", "closed", "resolved"]
        },
        "marketType": {
          "type": "string",
          "enum": ["moneyline", "spread", "total", "custom"]
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "odds": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["oddId", "outcome", "value"],
            "properties": {
              "oddId": {
                "type": "string",
                "minLength": 1
              },
              "outcome": {
                "type": "string",
                "minLength": 1
              },
              "value": {
                "type": "number"
              },
              "displayOrder": {
                "type": "integer",
                "minimum": 0
              }
            },
            "additionalProperties": false
          }
        },
        "limits": {
          "type": "object",
          "properties": {
            "minStake": {
              "type": "number",
              "minimum": 0
            },
            "maxStake": {
              "type": "number",
              "minimum": 0
            }
          },
          "additionalProperties": false
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
