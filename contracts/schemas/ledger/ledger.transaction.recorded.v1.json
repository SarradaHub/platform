{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://platform.example.com/schemas/ledger/ledger.transaction.recorded.v1.json",
  "title": "ledger.transaction.recorded.v1",
  "type": "object",
  "required": ["eventId", "schemaVersion", "occurredAt", "source", "payload"],
  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid"
    },
    "schemaVersion": {
      "type": "string",
      "const": "v1"
    },
    "occurredAt": {
      "type": "string",
      "format": "date-time"
    },
    "traceId": {
      "type": "string",
      "format": "uuid"
    },
    "causationId": {
      "type": "string",
      "format": "uuid"
    },
    "source": {
      "type": "string",
      "enum": [
        "ledger-service"
      ]
    },
    "context": {
      "type": "object",
      "required": ["tenantId", "environment"],
      "properties": {
        "tenantId": {
          "type": "string",
          "minLength": 1
        },
        "environment": {
          "type": "string",
          "enum": ["dev", "staging", "prod"]
        }
      },
      "additionalProperties": false
    },
    "payload": {
      "type": "object",
      "required": [
        "ledgerEntryId",
        "sourceEvent",
        "accounting",
        "amount",
        "currency",
        "recordedAt"
      ],
      "properties": {
        "ledgerEntryId": {
          "type": "string",
          "minLength": 1
        },
        "sourceEvent": {
          "type": "object",
          "required": ["eventName", "eventId"],
          "properties": {
            "eventName": {
              "type": "string"
            },
            "eventId": {
              "type": "string",
              "format": "uuid"
            }
          },
          "additionalProperties": false
        },
        "accounting": {
          "type": "object",
          "required": ["debitAccount", "creditAccount"],
          "properties": {
            "debitAccount": {
              "type": "string",
              "minLength": 1
            },
            "creditAccount": {
              "type": "string",
              "minLength": 1
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "amount": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$"
        },
        "recordedAt": {
          "type": "string",
          "format": "date-time"
        },
        "metadata": {
          "type": "object",
          "properties": {
            "userId": {
              "type": "string",
              "format": "uuid"
            },
            "matchId": {
              "type": "string",
              "format": "uuid"
            },
            "betId": {
              "type": "string"
            }
          },
          "additionalProperties": {
            "type": ["string", "number", "boolean"]
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
