{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://platform.example.com/schemas/identity/user.created.v1.json",
  "title": "user.created.v1",
  "type": "object",
  "required": ["eventId", "schemaVersion", "occurredAt", "source", "payload"],
  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid"
    },
    "schemaVersion": {
      "type": "string",
      "const": "v1"
    },
    "occurredAt": {
      "type": "string",
      "format": "date-time"
    },
    "traceId": {
      "type": "string",
      "format": "uuid"
    },
    "causationId": {
      "type": "string",
      "format": "uuid"
    },
    "source": {
      "type": "string",
      "enum": [
        "identity-service",
        "sarradabet",
        "pickup-game-manager",
        "saturday-league-api"
      ]
    },
    "context": {
      "type": "object",
      "required": ["tenantId", "environment"],
      "properties": {
        "tenantId": {
          "type": "string",
          "minLength": 1
        },
        "environment": {
          "type": "string",
          "enum": ["dev", "staging", "prod"]
        }
      },
      "additionalProperties": false
    },
    "payload": {
      "type": "object",
      "required": ["userId", "email", "createdAt"],
      "properties": {
        "userId": {
          "type": "string",
          "format": "uuid"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string",
          "pattern": "^\\+?[0-9]{7,15}$"
        },
        "displayName": {
          "type": "string",
          "minLength": 1
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "externalRefs": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["system", "identifier"],
            "properties": {
              "system": {
                "type": "string",
                "enum": [
                  "pickup-game-manager",
                  "sarradabet",
                  "saturday-league-api",
                  "saturday-league-frontend"
                ]
              },
              "identifier": {
                "type": "string",
                "minLength": 1
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
